<h4>Steps</h4>

<div class="row">
  <div class="col s12">
    {{#each sortedSteps as |step|}}
      {{#md-card title=step.title}}
	{{md-badge text=step.code}}
	{{#md-card-content}}
	  {{step.description}}
	{{/md-card-content}}
	{{#md-card-action}}
	  <a {{action 'finish' step}}>Finish</a>
	{{/md-card-action}}
      {{/md-card}}
    {{/each}}    
  </div>
</div>

<div class="row">
  {{#link-to 'pipelines.index' class='btn'}}Back{{/link-to}}
</div>
